extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="Password", name="password", type="password", required)
        input(placeholder="New Password", name="newPassword", type="password", required)
        input(placeholder="Confirm New Password", name="newPasswordConfirmation", type="password", required)
        input(type="submit", value="change-password")
        div
                a(href="/users/find-password") Find Password